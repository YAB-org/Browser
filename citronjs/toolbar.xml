<citron>
    <export sample="toolbar_menu"></export>

    <sample name="toolbar_menu">
        <div class="menu_item">
            <div class="menu_item_text">New Tab</div>
            <div class="menu_item_keybind">Ctrl + N</div>
        </div> 
        <div class="menu_item">
            <div class="menu_item_text">Close All Tabs</div>
            <div class="menu_item_keybind">Ctrl + ?</div>
        </div> 
        <div class="menu_separator"></div>
        <div class="menu_item">
            <div class="menu_item_text">History</div>
            <div class="menu_item_keybind">Ctrl + ?</div>
        </div> 
        <div class="menu_item">
            <div class="menu_item_text">Downloads</div>
            <div class="menu_item_keybind">Ctrl + ?</div>
        </div> 
        <div class="menu_item">
            <div class="menu_item_text">Show Bookmarks</div>
            <div class="menu_item_keybind">Ctrl + ?</div>
        </div> 
        <div class="menu_separator"></div>
        <div class="menu_item">
            <div class="menu_item_text">Open Developer Tools</div>
            <div class="menu_item_keybind">Ctrl + ?</div>
        </div> 
        <div class="menu_item">
            <div class="menu_item_text">Open Process Manager</div>
            <div class="menu_item_keybind">Ctrl + ?</div>
        </div> 
        <div class="menu_separator"></div>
        <div class="menu_item" id="menu_settings">
            <div class="menu_item_text">Settings</div>
            <div class="menu_item_keybind">Ctrl + ?</div>
        </div> 
    </sample>

</citron>