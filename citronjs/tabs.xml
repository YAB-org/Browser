<citron>
    <export sample="tab">
        <var var="title" default="New Tab"></var>
        <var var="id" default=""></var>
    </export>
    <export sample="tab_disabled">
        <var var="title" default="New Tab"></var>
        <var var="id" default=""></var>
    </export>


    <sample name="tab">
        <div class="tab">
            <div class="tab_left">
                <div class="tab_icon"></div>
                <div class="tab_title">ye so: { title }</div>
            </div>
            <div class="tab_right">
                <div class="tab_close_container">
                    <svg aria-hidden="true" role="img" width="12" height="12" viewBox="0 0 12 12"><polygon fill="currentColor" fill-rule="evenodd" points="11 1.576 6.583 6 11 10.424 10.424 11 6 6.583 1.576 11 1 10.424 5.417 6 1 1.576 1.576 1 6 5.417 10.424 1"></polygon></svg>
                </div>
            </div>
          </div>
    </sample>

        <sample name="tab_disabled">
        <div class="tab tab-disabled" id="{ id }">
            <div class="tab_left">
                <div class="tab_icon"></div>
                <div class="tab_title">ye so: { title }</div>
            </div>
            <div class="tab_right">
                <div class="tab_close_container">
                    <svg aria-hidden="true" role="img" width="12" height="12" viewBox="0 0 12 12"><polygon fill="currentColor" fill-rule="evenodd" points="11 1.576 6.583 6 11 10.424 10.424 11 6 6.583 1.576 11 1 10.424 5.417 6 1 1.576 1.576 1 6 5.417 10.424 1"></polygon></svg>
                </div>
            </div>
          </div>
    </sample>
</citron>